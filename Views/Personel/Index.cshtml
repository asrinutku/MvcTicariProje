@using MvcTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Id</th>
        <th>personel adı</th>
        <th>soyad</th>
        <th>Gorsel</th>
        <th>departman</th>
        <th>guncelle</th>
        <th>satıslar</th>
    </tr>
    @foreach (var k in Model)
    {

        <tr>
            <td>@k.Personelid</td>
            <td>@k.PersonelAd</td>
            <td>@k.PersonelSoyad</td>
            <td>@k.PersonelGorsel</td>
            <td>@k.Departman.DepartmanAd</td>
            
            
            
            <td><a href="/Personel/PersonelGetir/@k.Personelid" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@k.Personelid" class="btn btn-success">Departman Detay</a></td>


        </tr>
    }



</table>

<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>