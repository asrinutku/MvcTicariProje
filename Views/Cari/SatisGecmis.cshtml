@using MvcTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "SatisGecmis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Satis Geçmişi</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Cari Ad : @ViewBag.cr</li>
</ol>

<table class="table table-bordered">
    <tr>
        <th>Satıs ıd</th>
        <th>Urun</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>

    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Satisid</td>
            <td>@x.Urun.UrunAd</td>
            <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</td>
            <td>@x.Fiyat</td>
            <td>@x.Adet</td>
            <td>@x.ToplamTutar</td>
            <td>@x.Tarih</td>
            <td><a href="#" class="btn btn-default" style="background-color:gray">Yazdır</a></td>
        </tr>
    }


</table>


