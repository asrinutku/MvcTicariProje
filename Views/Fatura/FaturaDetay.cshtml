@using MvcTicariOtomasyon.Models.Siniflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Fatura Detay Sayfası</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>



<table class="table table-hover">
    <tr>
        <th>ıd</th>
        <th>acıklama</th>
        <th>miktar</th>
        <th>birim fiyat</th>
        <th>tutar</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.FaturaKalemid</td>
            <td>@x.Aciklama</td>
            <td>@x.Miktar</td>
            <td>@x.BirimFiyat</td>
            <td>@x.Tutar</td>

        </tr>
    }

</table>

<a href="/Fatura/KalemEkle/" class="btn btn-primary">Yeni Kalem Girişi</a>
